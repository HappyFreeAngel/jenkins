#!/bin/bash
docker stop jenkins
docker rm   jenkins

firewall-cmd --add-port=8080/tcp --permanent --zone=public
firewall-cmd --reload

docker run  -d  \
--name  jenkins \
--restart always \
-p 8080:8080 -p 50000:50000 \
-v /etc/localtime:/etc/localtime \
-v `pwd`/jenkins_home:/var/jenkins_home \
 jenkins/jenkins:latest
